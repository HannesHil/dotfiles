font JetBrains Mono 11
smart_borders on

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu kickoff | xargs swaymsg exec --
set $lock /home/hannes/bin/lock | xargs swaymsg exec --
exec_always pkill kanshi; exec kanshi

bindsym $mod+CTRL+l exec $lock

for_window [class="Chromium"] move container to workspace 3
for_window [app_id="thunderbird"] move container to workspace 4
for_window [class="Spotify"] move container to workspace 9
for_window [class="Slack"] move container to workspace 10
for_window [app_id="telegramdesktop"] move container to workspace 10

output * bg Sway_Wallpaper_Blue_1920x1080.png fill

exec swayidle -w \
          timeout 120 'exec /home/hannes/bin/lock2 &' \
#          timeout 240 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
          before-sleep 'exec $lock'

input "2:7:SynPS\/2_Synaptics_TouchPad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

input "type:keyboard" {
    xkb_layout de
    xkb_variant nodeadkeys,
    xkb_numlock enabled
}

input * xkb_layout "de"


bindswitch --locked lid:on output $display_laptop disable
bindswitch --locked lid:off output $display_laptop enable

#############################
# mark x11
#############################

for_window [shell=".*"] title_format "%title :: %shell"

#############################
# brightness
#############################

bindsym XF86MonBrightnessDown exec brightnessctl -d amdgpu_bl0 set -- -5%
bindsym XF86MonBrightnessUp   exec brightnessctl -d amdgpu_bl0 set -- +5%

#############################
# volume control
#############################

set $pa_volume pactl set-sink-volume @DEFAULT_SINK@
set $pa_mute pactl set-sink-mute @DEFAULT_SINK@
set $pa_mik_mute pactl set-source-mute @DEFAULT_SOURCE@
set $audio Audio [←]-5% [→]+5% [↓]source [↑]sink
bindsym XF86AudioMute        exec $pa_mute toggle
bindsym XF86AudioLowerVolume exec $pa_volume -5%
bindsym XF86AudioRaiseVolume exec $pa_volume +5%
bindsym XF86AudioMicMute     exec $pa_mik_mute toggle
bindsym $mod+z mode "$audio"
mode "$audio" {
	bindsym $left exec $pa_volume -5%
	bindsym Left  exec $pa_volume -5%

	bindsym $right exec $pa_volume +5%
	bindsym Right  exec $pa_volume +5%

	bindsym $up exec $pa_mute toggle
	bindsym Up  exec $pa_mute toggle

	bindsym $down exec exec $pa_mik_mute toggle
	bindsym Down  exec exec $pa_mik_mute toggle

	bindsym Escape mode default
	bindsym Return mode default
}

